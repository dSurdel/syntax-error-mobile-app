<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCitizensInitiativeActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="313dp"
        android:layout_height="97dp"
        android:background="#FFC107"
        android:text="Zglos inicjatywe obywatelska"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="584dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="378dp"
        android:layout_height="63dp"
        android:contentDescription="Name"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add citizens initiative"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="29dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="376dp"
        android:layout_height="130dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initiative description"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initiative name"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initiative category"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="357dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bezpieczenstwo"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="389dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edukacja"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="389dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infrastruktura"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="389dp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spolecznosc"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="437dp" />

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Srodowisko"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="437dp" />

</android.support.constraint.ConstraintLayout>